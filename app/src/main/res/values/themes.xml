<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialUITests" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">#ff7961</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MaterialUITests.defChipStyle.Entry" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="chipStyle">@style/Theme.MaterialUITests.Chip.Entry</item>
    </style>

    <style name="Theme.MaterialUITests.defChipStyle.Choice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="chipStyle">@style/Theme.MaterialUITests.Chip.Choice</item>
    </style>

    <style name="Theme.MaterialUITests.defChipStyle.Filter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="chipStyle">@style/Theme.MaterialUITests.Chip.Filter</item>
    </style>



    <style name="Theme.MaterialUITests.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="android:textColor">@color/chip_stroke</item>
        <item name="checkedIconTint">@color/red</item>
    </style>

    <style name="Theme.MaterialUITests.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="android:textColor">@color/chip_stroke</item>
        <item name="checkedIconTint">@color/red</item>
    </style>

    <style name="Theme.MaterialUITests.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="android:textColor">@color/chip_stroke</item>
        <item name="checkedIconTint">@color/red</item>
    </style>


    <style name="Theme.MaterialUITests.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialUITests.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MaterialUITests.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>